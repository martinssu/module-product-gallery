<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aimes_ProductGallery::css/slick.css"/>
    </head>
    <body>
        <!-- Remove Fotorama -->
        <referenceBlock name="product.info.media.image" remove="true"/>

        <!-- Add slick gallery -->
        <referenceBlock name="product.info.media">
            <block name="product.info.media.slick"
                   class="Aimes\ProductGallery\Block\Gallery"
                   template="Aimes_ProductGallery::product-gallery.phtml">
            </block>
        </referenceBlock>
    </body>
</page>
